<FirstScreen>:
    GridLayout:
        cols: 1
        padding: 10
        spacing: 10
        AsyncImage:
            id: img
            keep_ratio: True
            allow_stretch: True
            size_hint_y: 0.8
        TextInput:
            id: user_query
            size_hint_y: 0.1
        Button:
            text: 'Search Image'
            size_hint_y: 0.1
            on_press: root.search_image()


<RootWidget>:
    FirstScreen:
        id: first_screen
        name: 'first_screen'
